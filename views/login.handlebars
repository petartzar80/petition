{{#if error}}
       <div class ="error"> Oops! something went wrong</div>
   {{/if}}
<div class="loginContainer">
    <div class="textDiv" id="loginDiv">
        <h1>Logging in.</h1>
        <form method="POST" class="inputField" id="loginInput">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">

            <div class="textInput">
                <div class="input">
                    <p>EMAIL</p>
                    <input type="text" name="email" id="email">
                </div>
                <div class="input">
                    <p>PASSWORD</p>
                    <input type="password" name="password" id="password">
                </div>

            </div>
            <button name="button" id="submit">LOG IN</button>
        </form>
    </div>
    </div>
</div>
