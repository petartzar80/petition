{{#if error}}
   <div class ="error"> Oops! something went wrong</div>
{{/if}}
<div class="container">
    <div class="content">
        <div class="login-link display-top">
            <a href="/logout">LOGOUT</a>
        </div>
        <div class="headline">
            <h1>REORGANIZE YOUR DATA.</h1>
        </div>
            <form method="POST" class="input-field">
                <div class="input">
                    <input type="text" name="first" value={{first}} required autocomplete="off">
                </div>
                <div class="input">
                    <input type="text" name="last" value={{last}} required autocomplete="off">
                </div>
                <div class="input">
                    <input type="text" name="email" value={{email}} required autocomplete="off">
                </div>
                <div class="input">
                    <input type="password" name="password" value="" placeholder="PASSWORD">
                </div>
                <div class="input">
                    <input autocomplete="off" type="text" name="age" placeholder="AGE" value={{age}}>
                </div>
                <div class="input">
                    <input autocomplete="off" type="text" name="city" placeholder="CITY" value={{city}}>
                </div>
                <div class="input">
                    <input autocomplete="off" type="text" name="page"  placeholder="HOMEPAGE"value={{page}}>
                </div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button class="submit">UPDATE</button>
            </form>
            <div class="login-link display-bottom edit-prof">
                <a href="/logout">LOGOUT</a>
            </div>
    </div>
</div>
