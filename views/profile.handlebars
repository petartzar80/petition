{{#if error}}
       <div class="error"> Oops! something went wrong</div>
   {{/if}}
<div class="container">
    <div class="content" id="profileContent">
        <div class="textDiv">
            <div class="ribbon custom-profile">
                <h1>Profile yourself.</h1>
            </div>
            <div class="ribbon custom-profile">
                <div class="profileInfo">
                    <p>Entertain us by providing some general information on your person.</p>
                </div>
            </div>
        </div>

        <form method="POST" class="inputField" >

            <input type="hidden" name="_csrf" value="{{csrfToken}}">

            <div class="textInput">
                <div class="input custom-profile">
                    <p>AGE</p>
                    <br>
                    <input type="number" name="age" id="age" autocomplete="off">
                </div>
                <div class="input custom-profile">
                    <p>CITY</p>
                    <br>
                    <input type="text" name="city" id="city" autocomplete="off">
                </div>
                <div class="input custom-profile">
                    <p>HOMEPAGE</p>
                    <br>
                    <input type="text" name="homepage" id="homepage" autocomplete="off">
                </div>

            </div>
            <button name="button" id="submit" class="profile-button">CONTINUE</button>

        </form>
    </div>

</div>
